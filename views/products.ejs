<!-- products.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Produkty - Nazwa Sklepu</title>
    <link rel="stylesheet" href="/style.css">
    <style>
        .opis-produktu {
          display: none; /* Ukryj opis początkowo */
        }

        .pokaz-opis {
          cursor: pointer;
          color: blue;
          text-decoration: underline;
        }
      </style>
      <script>
        function pokazOpis(id) {
          var opisElement = document.getElementById(id);

          if (opisElement.style.display === 'none') {
            opisElement.style.display = 'block';
          } else {
            opisElement.style.display = 'none';
          }
        }
      </script>
</head>
<body>

<header>
    <h1>Nazwa Sklepu</h1>
    <nav>
        <ul>
            <li><a href="/">Strona Główna</a></li>
            <li><a href="/produkty">Produkty</a></li>
            <li><a href="/kontakt">Kontakt</a></li>
            <%if(!login){%>
                <li><a href="/login">Zaloguj się</a></li>
                <li><a href="/register">Zarejestruj się</a></li>
            <%} else { %>
                <li><a href="/koszyk">Koszyk</a></li>
                <li><a href="/logout">Wyloguj się</a></li>
            <% } %>
            <%if(admin){%>
                <li><a href="/manage-products">Zarządzaj produktami</a></li>
                <li><a href="/manage-users">Zarządzaj urzytkownikami</a></li>
            <%} %>
        </ul>
    </nav>
</header>

<main>
    <section class="product-list">
        <h2>Produkty</h2>

            <% result.rows.forEach(r => { %>
                <div class="product">
                    <h3> <%= r.name %> </h3>
                    <p>Cena: <%= r.price %></p>

                    <p class="pokaz-opis" onclick="pokazOpis('<%= r.id %>')">Opis produktu</p>
                    <div class="opis-produktu" id='<%= r.id %>'>
                        <p><%= r.description %></p>
                      </div>

                    <button onclick=<%= `window.location.href='/zakup/${r.id}'` %>>Dodaj do koszyka</button>
                </div>
            <% }); %>

    </section>
</main>

<footer>
    <p>&copy; 2024 Nazwa Sklepu. Wszelkie prawa zastrzeżone.</p>
</footer>

</body>
</html>
